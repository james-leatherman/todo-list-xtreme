{
  "id": null,
  "uid": "application-overview",
  "title": "Application Overview",
  "tags": [
    "todo-list-xtreme",
    "fastapi"
  ],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Service Status",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-main",
        "name": "Prometheus"
      },
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{job}} - {{instance}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-main",
            "name": "Prometheus"
          }
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": 0
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          },
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "Down"
                }
              },
              "type": "value"
            },
            {
              "options": {
                "1": {
                  "text": "Up"
                }
              },
              "type": "value"
            }
          ]
        }
      }
    },
    {
      "id": 2,
      "title": "HTTP Requests per Second",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-main",
        "name": "Prometheus"
      },
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{handler}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-main",
            "name": "Prometheus"
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 8,
        "y": 0
      },
      "yAxes": [
        {
          "label": "requests/sec"
        },
        {
          "show": false
        }
      ]
    },
    {
      "id": 3,
      "title": "Response Time (95th percentile)",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-main",
        "name": "Prometheus"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "95th percentile",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-main",
            "name": "Prometheus"
          }
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 4,
        "x": 20,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": 0
              },
              {
                "color": "yellow",
                "value": 0.5
              },
              {
                "color": "red",
                "value": 1.0
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "HTTP Status Codes",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-main",
        "name": "Prometheus"
      },
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{status}} - {{method}}",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-main",
            "name": "Prometheus"
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 5,
      "title": "Database Connections",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-main",
        "name": "Prometheus"
      },
      "targets": [
        {
          "expr": "pg_stat_database_numbackends",
          "legendFormat": "Active Connections",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-main",
            "name": "Prometheus"
          }
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "10s",
  "schemaVersion": 30,
  "version": 1
}