{
  "id": null,
  "title": "Prometheus Overview",
  "tags": ["prometheus"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Prometheus Target Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{job}} - {{instance}}"
        }
      ],
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Prometheus Targets",
      "type": "table",
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{job}} - {{instance}}"
        }
      ],
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0}
    },
    {
      "id": 3,
      "title": "Prometheus Configuration Reload",
      "type": "stat",
      "targets": [
        {
          "expr": "prometheus_config_last_reload_successful",
          "legendFormat": "Config Reload Success"
        }
      ],
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0}
    },
    {
      "id": 4,
      "title": "Samples Scraped",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(prometheus_tsdb_symbol_table_size_bytes{job='prometheus'}[5m])",
          "legendFormat": "Symbol Table Size"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
    },
    {
      "id": 5,
      "title": "Query Duration",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(prometheus_engine_query_duration_seconds{job='prometheus'}[5m])",
          "legendFormat": "Query Duration"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "30s"
}
